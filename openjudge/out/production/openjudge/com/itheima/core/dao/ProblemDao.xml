	<insert id="createProblem" parameterType="java.util.Map">
		insert into problem(id,title,description,input_description,output_description,samples,hint,languages,create_time,time_limit,memory_limit,
		rule_type,visible,difficulty,source,created_by_id,io_mode,share_submission)
	             values(
	             	  #{id},
	                  #{title},
	                  #{desc},
	                  #{indesc},
	                  #{outdesc},
 					  #{iss},
	                  #{hint},

	                  #{checknamee},
	                  #{create_time},

	                  #{time_limit},
	                  #{memory_limit},
	                  #{typee},
	                  #{vis},
	                  #{difficulty},

	                  #{source},

	                  #{created_by_id},

	                  #{iomodee},
	                  #{ss}
	            )
	</insert>

	<!-- 查询题目列表  -->
	<select id="selectProblemList" resultType="problem">
		SELECT
		*
		FROM
		problem
		<where>
			<if test="title != null" >
				title like "%"#{title}"%"
			</if>
			<if test="difficulty == 'low' || difficulty == 'middle' || difficulty == 'high'" >
				and difficulty = #{difficulty}
			</if>
			<if test="difficulty == 'all'" >
			</if>
		</where>
		limit #{startPos},#{pageSize}
	</select>

	<!-- 查询题目总数 -->
	<select id="selectProblemListCount" resultType="int">
		select count(*) from problem
		<where>
			<if test="title != null" >
				title like "%"#{title}"%"
			</if>
			<if test="difficulty == 'low' || difficulty == 'middle' || difficulty == 'high'" >
				and difficulty = #{difficulty}
			</if>
			<if test="difficulty == 'all'" >
			</if>
		</where>
		<!--		<include refid="selectProblemListWhere"/>-->
	</select>

</mapper>
